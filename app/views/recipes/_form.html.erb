    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
   <%= f.select :category, [['Drinks','Drinks'],['Appetizers','Appetizers'],['Entrees','Entrees'],['Desserts','Desserts'],['Snacks','Snacks']] %>
