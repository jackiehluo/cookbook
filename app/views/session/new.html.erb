<div class='text-center'>

<h1>Log In</h1>

<%= form_for :session, :url => login_path, :method => :post do |f| %>

<div class="field">
  <%= f.label :username %><br>
  <%= f.text_field :username %>
</div>
<div class="field">
  <%= f.label :password, "Password" %><br>
  <%= f.password_field :password %>
</div>

<div class="actions">
  <%= f.submit "Log In", :class => "btn btn-success" %>
</div>

<% end %>
</div>
